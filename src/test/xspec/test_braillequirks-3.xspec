      <x:context>
        <stub xml:space="preserve" xml:lang="de">Gedanken – Strich      —</stub>
      </x:context>
      <x:expect label="braille">
	<stub xml:space="preserve" xml:lang="de">&amp;DKC'- ]R#'-</stub>
      </x:expect>
    </x:scenario>

