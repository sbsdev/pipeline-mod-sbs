<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
	       xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
	       xmlns:brl="http://www.daisy.org/z3986/2009/braille/"
	       xmlns:my="http://my-functions"
               stylesheet="../../main/resources/xml/block-translate.xsl"
	       preserve-space="dtb:p dtb:byline dtb:author dtb:li dtb:lic dtb:doctitle dtb:docauthor dtb:span dtb:em dtb:strong brl:emph dtb:line dtb:h1 dtb:h2 dtb:h3 dtb:h4 dtb:h5 dtb:h6">

  <x:param name="contraction-grade">1</x:param>

    <x:scenario label="getTable for fr and contraction = 1"
                pending="FIXME: fails because the required context of my:get-tables consists of tunnel parameters in addition to the element">
      <x:call function="my:get-tables">
        <x:param>
          <dtb:p xml:lang="fr"/>
	</x:param>
        <x:param select="''"/>
      </x:call>
      <x:expect label="braille" select="'sbs.dis,sbs-de-core6.cti,sbs-de-accents.cti,sbs-special.cti,sbs-whitespace.mod,sbs-numsign.mod,sbs-litdigit-upper.mod,sbs-de-core.mod,sbs-de-g0-core.mod,sbs-de-hyph-none.mod,sbs-de-accents-ch.mod,sbs-special.mod'"/>
    </x:scenario>

    <x:scenario label="getTable for de and contraction = 1">
      <x:call function="my:get-tables">
        <x:param>
          <dtb:p xml:lang="de"/>
	</x:param>
        <x:param select="''"/>
      </x:call>
      <x:expect label="braille" select="'sbs.dis,sbs-de-core6.cti,sbs-de-accents.cti,sbs-special.cti,sbs-whitespace.mod,sbs-numsign.mod,sbs-litdigit-upper.mod,sbs-de-core.mod,sbs-de-g0-core.mod,sbs-de-g1-white.mod,sbs-de-g1-core.mod,sbs-de-hyph-none.mod,sbs-de-accents-ch.mod,sbs-special.mod'"/>
    </x:scenario>

    <x:scenario label="getTable for de and contraction = 1 and accents reduced">
      <x:call function="my:get-tables">
        <x:param>
          <dtb:span brl:accents="reduced" xml:lang="de"/>
	</x:param>
        <x:param select="''"/>
      </x:call>
      <x:expect label="braille" select="'sbs.dis,sbs-de-core6.cti,sbs-de-accents.cti,sbs-special.cti,sbs-whitespace.mod,sbs-numsign.mod,sbs-litdigit-upper.mod,sbs-de-core.mod,sbs-de-g0-core.mod,sbs-de-g1-white.mod,sbs-de-g1-core.mod,sbs-de-hyph-none.mod,sbs-de-accents-reduced.mod,sbs-special.mod'"/>
    </x:scenario>

    <x:scenario label="getTable for abbr (de) and contraction = 1">
      <x:call function="my:get-tables">
        <x:param>
          <dtb:abbr xml:lang="de"/>
	</x:param>
        <x:param select="'abbr'"/>
      </x:call>
      <x:expect label="braille" select="'sbs.dis,sbs-de-core6.cti,sbs-de-accents.cti,sbs-special.cti,sbs-whitespace.mod,sbs-numsign.mod,sbs-litdigit-upper.mod,sbs-de-core.mod,sbs-de-g0-core.mod,sbs-de-hyph-none.mod,sbs-de-accents-ch.mod,sbs-special.mod'"/>
    </x:scenario>

</x:description>
