<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
	       xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
	       xmlns:brl="http://www.daisy.org/z3986/2009/braille/"
               stylesheet="../../main/resources/xml/block-translate.xsl"
	       preserve-space="dtb:p dtb:byline dtb:author dtb:li dtb:lic dtb:doctitle dtb:docauthor dtb:span dtb:em dtb:strong brl:emph dtb:line dtb:h1 dtb:h2 dtb:h3 dtb:h4 dtb:h5 dtb:h6">

  <x:param name="contraction-grade">2</x:param>
  <x:param name="hyphenator">(locale:de)</x:param>
  <x:param name="ascii-braille">yes</x:param>

    <x:scenario label="Samp block">
      <x:context>
        <dtb:level1 xml:lang="de">
          <dtb:samp>Foo</dtb:samp>
	</dtb:level1>
      </x:context>
      <x:expect label="braille">
y LEVEL1b
.xNOPAGENUM

xxx Was originally a dtb:samp
y P
 FOO
y LEVEL1e
</x:expect>
    </x:scenario>

    <x:scenario label="Samp block">
      <x:context>
        <dtb:div brl:class="foo" xml:lang="de">
          <dtb:samp>Foo</dtb:samp>
	</dtb:div>
      </x:context>
      <x:expect label="braille">
y DIVb_foo

xxx Was originally a dtb:samp
y P
 FOO
y DIVe_foo
</x:expect>
    </x:scenario>

    <x:scenario label="Samp inline (inside p)">
      <x:context>
        <dtb:p xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:p>
      </x:context>
      <x:expect label="braille">
y P
 FOO BAR BAZ</x:expect>
    </x:scenario>

    <x:scenario label="Samp inline (inside th)">
      <x:context>
        <dtb:th xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:th>
      </x:context>
      <x:expect label="braille">FOO BAR BAZ</x:expect>
    </x:scenario>

    <x:scenario label="Samp inline (inside td)">
      <x:context>
        <dtb:td xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:td>
      </x:context>
      <x:expect label="braille">FOO BAR BAZ</x:expect>
    </x:scenario>

    <x:scenario label="Samp inline (inside li)">
      <x:context>
        <dtb:li xml:lang="de">Foo <dtb:samp>Bar</dtb:samp> Baz</dtb:li>
      </x:context>
      <x:expect label="braille">
y LI
 FOO BAR BAZ
</x:expect>
    </x:scenario>

</x:description>
