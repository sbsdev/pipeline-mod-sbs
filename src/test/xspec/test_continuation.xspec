<?xml version="1.0" encoding="utf-8"?>
<x:description xmlns:x="http://www.jenitennison.com/xslt/xspec"
	       xmlns:dtb="http://www.daisy.org/z3986/2005/dtbook/"
	       xmlns:brl="http://www.daisy.org/z3986/2009/braille/"
               stylesheet="../../main/resources/xml/block-translate.xsl"
	       preserve-space="dtb:p dtb:byline dtb:author dtb:li dtb:lic dtb:doctitle dtb:docauthor dtb:span dtb:em dtb:strong brl:emph dtb:line dtb:h1 dtb:h2 dtb:h3 dtb:h4 dtb:h5 dtb:h6">

  <x:param name="contraction-grade">2</x:param>
  <x:param name="ascii-braille">yes</x:param>

    <x:scenario label="brl:continuation attribute on &lt;em&gt;">
      <x:context>
        <stub xml:lang="de">
          <dtb:p><dtb:em brl:continuation="em1 em2 em3">Bla bla bla.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em1">Bla bla bla.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em2">Bla bla bla.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em3">Bla bla bla.</dtb:em> Bla bla bla.</dtb:p>
          <dtb:p>Bla bla bla.</dtb:p>
          <dtb:p><dtb:em>Bla bla bla.</dtb:em></dtb:p>
        </stub>
      </x:context>
      <x:expect label="braille">
        <stub xml:lang="de">
          <dtb:p><dtb:em brl:continuation="em1 em2 em3">__BLA BLA BLA.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em1">BLA BLA BLA.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em2">BLA BLA BLA.</dtb:em></dtb:p>
          <dtb:p><dtb:em id="em3">BLA BLA BLA.'.</dtb:em> BLA BLA BLA.</dtb:p>
          <dtb:p>BLA BLA BLA.</dtb:p>
          <dtb:p><dtb:em>__BLA BLA BLA.'.</dtb:em></dtb:p>
        </stub>
      </x:expect>
    </x:scenario>

</x:description>
